{
  "name": "scanlation-harmonia",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "version": "0.0.1",
  "scripts": {
    "build-frontend": "rollup -c",
    "build-backend": "tsc",
    "build": "npm run build-backend && npm run build-frontend",
    "dev": "rollup -c -w",
    "start-frontend": "sirv public",
    "start-backend": "ts-node src/backend/index.ts",
    "format": "prettier --write \"src/backend/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A helpers && git add -A index.ts",
    "postversion": "git push && git push --tags",
    "start": "npm-run-all --parallel start-backend dev",
    "pkg": "npm run build && pkg ."
  },
  "author": "Linkcube",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@types/express": "^4.17.3",
    "@types/express-fileupload": "^1.1.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.7",
    "@types/rimraf": "^3.0.0",
    "fetch-graphql": "^0.1.1",
    "linkcube-svelte-components": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^0.4.5",
    "svelte": "^3.0.0",
    "svelte-preview-card": "^1.0.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-fileupload": "^1.1.9",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "lodash": "^4.17.19",
    "open": "^7.0.3",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "tree-kill": "^1.2.2"
  },
  "files": [
    "lib/**/*",
    "public/**/*"
  ],
  "pkg": {
    "scripts": [
      "lib/**/*.js",
      "public/**/*.js"
    ],
    "assets": [
      "lib/**/*",
      "public/**/*"
    ]
  },
  "bin": "startAll.js"
}
